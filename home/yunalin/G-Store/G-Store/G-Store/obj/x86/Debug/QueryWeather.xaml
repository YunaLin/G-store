    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/2015071504.jpg"  Stretch="UniformToFill"/>
        </Grid.Background>
        <AutoSuggestBox x:ConnectionId='1' x:Name="number"                      
                      PlaceholderText="请输入城市（中文）"
                                                   
                      IsSuggestionListOpen="True"
                      Visibility="Visible"
                      QueryIcon="Find" 
                        HorizontalAlignment="Left"
                        RenderTransformOrigin="-0.035,4.642" Margin="291,160,0,0" Width="254"/>
        <TextBlock x:ConnectionId='2' x:Name="location" HorizontalAlignment="Left" Margin="291,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="319" FontSize="16"/>

        <TextBlock x:ConnectionId='3' x:Name="runner" HorizontalAlignment="Left" Margin="291,280,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="319" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="108,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="26.667" Width="183" Text="城市" Height="38"/>
        <TextBlock HorizontalAlignment="Left" Margin="108,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="26.667" Width="183" Text="今日温度" Height="39"/>
        <TextBlock HorizontalAlignment="Left" Margin="108,275,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="26.667" Width="183" Text="今日天气" Height="38"/>
        <TextBlock x:ConnectionId='4' x:Name="textBlock" HorizontalAlignment="Left" Height="83" Margin="100,30,0,0" TextWrapping="Wrap" Text="天气查询" VerticalAlignment="Top" Width="591" FontSize="41.667"/>
     
        <TextBlock x:ConnectionId='5' x:Name="textBlock1" HorizontalAlignment="Left" Margin="108,406,0,0" TextWrapping="Wrap" Text="明日天气" VerticalAlignment="Top" Width="122" Height="50" FontSize="26.667"/>
        <TextBlock x:ConnectionId='6' x:Name="tomorrow" HorizontalAlignment="Left" Margin="291,419,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="319" Height="33"/>
        <TextBlock x:ConnectionId='7' x:Name="Textblock" HorizontalAlignment="Left" Margin="108,350,0,0" TextWrapping="Wrap" Text="明日温度" VerticalAlignment="Top" RenderTransformOrigin="-0.952,-2.033" Width="122" Height="47" FontSize="26.667"/>
     
        <TextBlock x:ConnectionId='8' x:Name="tomorrow1" HorizontalAlignment="Left" Margin="291,350,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="319" Height="47"/>
    </Grid>
